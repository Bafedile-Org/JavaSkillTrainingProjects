<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>za.co.mecer.Controller</servlet-class>
        <servlet-name>getResults</servlet-name>
        <jsp-file>/details.jsp</jsp-file>
         <servlet-name>getFormPage</servlet-name>
        <jsp-file>/formPage.jsp</jsp-file>
        
        
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/control</url-pattern>
         <servlet-name>getResults</servlet-name>
        <url-pattern>/results</url-pattern>
        <servlet-name>getFormPage</servlet-name>
        <url-pattern>/form</url-pattern>
        
       
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>formPage.jsp</welcome-file>
    </welcome-file-list>
</web-app>
